<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="-5dp">

        <TextView
            android:text="@string/blood_glucose_estimation"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_plot_title"
            android:text="plot title"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_glucose_prediction"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_glucose_prediction"
            android:textColor="@android:color/black"
            android:text="000"
            android:textAlignment="center"
            android:textSize="80sp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="-10dp" />

        <ImageView
            android:id="@+id/iv_unit"
            android:src="@drawable/ic_unit_mgdl"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/iv_glucose_prediction"
            android:src="@drawable/arrow_flat"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"  />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_glucose_current_value"
        android:text="@string/glucose_current_value"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>